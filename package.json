{
  "name": "dgt-monitor",
  "version": "1.0.0",
  "description": "Tracking funding allocation",
  "author": "phamdat1306@gmail.com",
  "main": "src/index.js",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=7.6",
    "yarn": "*"
  },
  "_moduleAliases": {
    "@root": "src",
    "@config": "src/config",
    "@controllers": "src/controllers",
    "@middlewares": "src/middlewares",
    "@routes": "src/routes",
    "@blockchains": "src/blockchains",
    "@services": "src/services",
    "@utils": "src/utils",
    "@validations": "src/validations",
    "@tests": "tests"
  },
  "scripts": {
    "env": "node ./src/utils/environment",
    "precommit": "yarn lint",
    "prestart": "yarn",
    "start": "node ./node_modules/.bin/pm2 start ./src/index.js --attach",
    "dev": "nodemon --watch src ./src/index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 120000 --recursive tests",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 120000 tests/integration",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o public/docs",
    "postdocs": "opn public/docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "dependencies": {
    "@cityofzion/neon-js": "^4.7.2",
    "@hapi/joi": "^17.1.0",
    "@ont-community/hdkey-secp256r1": "^1.0.1",
    "@sentry/node": "^7.54.0",
    "async": "^3.2.0",
    "aws-sdk": "^2.638.0",
    "bignumber.js": "^9.0.0",
    "bip32": "^2.0.5",
    "bitcore-lib": "^8.16.0",
    "bitcore-lib-cash": "^8.16.0",
    "blakejs": "^1.1.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "coininfo": "^5.1.0",
    "coinselect": "^3.1.11",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cron": "^1.8.2",
    "cross-env": "^5.0.1",
    "dotenv": "^8.2.0",
    "eosjs": "^20.0.3",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^6.2.0",
    "express": "^4.15.2",
    "express-fileupload": "^1.1.6",
    "fs": "^0.0.1-security",
    "hdkey": "^1.1.1",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "kafkajs": "^1.14.0",
    "method-override": "^2.3.8",
    "module-alias": "^2.2.2",
    "morgan": "^1.8.1",
    "multicoin-address-validator": "^0.4.1",
    "node-fetch": "^2.6.11",
    "os": "^0.1.2",
    "pm2": "^2.4.6",
    "redis": "^3.0.2",
    "require-all": "^3.0.0",
    "ripple-lib": "^1.6.4",
    "sotez": "https://github.com/vncdevs/sotez.git",
    "tronweb": "^5.2.0",
    "winston": "^3.9.0",
    "winston-transport-sentry-node": "^2.7.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "bip39": "^3.0.2",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.10.0",
    "supertest": "^3.0.0"
  }
}
